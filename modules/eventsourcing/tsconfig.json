{
  "extends": "./../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist"
  },
  "typedocOptions": {
    "excludeExternals": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "includeDeclarations": false,
    "mode": "library",
    "name": "Eventi core library",
    "plugin": "none",
    "readme": "none",
    "inputFiles": ["./src/index.ts"],
    "exclude": "**/*+(.spec|.e2e).ts",
    "out": "doc"
  },
  "include": [
    "./src/**/*"
  ]
}